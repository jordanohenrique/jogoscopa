<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relJogadores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtjogNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cxStatus"
            android:layout_alignBottom="@+id/cxStatus"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/txtjogPosicao"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="jogador"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/txtjogPosicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cxStatus"
            android:layout_alignBottom="@+id/cxStatus"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="pos"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/preto" />

        <CheckBox
            android:id="@+id/cxStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtjogPosicao"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:editable="false"
            android:text="AA" />

</RelativeLayout>
