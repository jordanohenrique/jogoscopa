<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.copa.view.EstadiosActivity" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/estadios_img_width"
            android:layout_height="@dimen/estadios_img_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/estadios_mleft"
            android:layout_marginRight="@dimen/estadios_mright"
            android:layout_marginTop="@dimen/estadios_mtop"
            android:scaleType="centerCrop"
            android:src="@drawable/mineirao" />

        <TextView
            android:id="@+id/txtEstApelido"
            style="@style/TextviewEstadios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtEstNome"
            style="@style/TextviewEstadios_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtEstApelido"
            android:layout_alignRight="@+id/image"
            android:layout_below="@+id/txtEstApelido"
            android:text="TextView" />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtEstNome"
            android:background="@color/cinzamedio" />

        <TextView
            android:id="@+id/textView1"
            style="@style/TextviewEstadios_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/View01"
            android:text="@string/capacidade"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:src="@drawable/person" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:src="@drawable/car" />

        <TextView
            android:id="@+id/txtEstCidade"
            style="@style/TextviewEstadios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtEstNome"
            android:layout_alignRight="@+id/txtEstNome"
            android:layout_below="@+id/view2"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtEstCidade"
            android:layout_below="@+id/txtEstCidade"
            android:src="@drawable/locale" />

        <View
            android:id="@+id/View01"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
            android:background="@color/cinzamedio" />

        <TextView
            android:id="@+id/txtEstCapacidade"
            style="@style/TextviewEstadios_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtEstEndereco"
            style="@style/TextviewEstadios_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignRight="@+id/txtEstCidade"
            android:layout_alignTop="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtEstVagas"
            style="@style/TextviewEstadios_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtEstCapacidade"
            android:layout_below="@+id/imageView2"
            android:text="TextView" />

    </RelativeLayout>

</ScrollView>